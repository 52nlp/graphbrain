#parse("velocity/template/ecopage_header.wm")

<form role="form" action="edittests" method="post">
    <textarea id="tests" name="tests">
$tests
    </textarea>
    <br />
    <button type="submit" class="btn btn-default">Save</button>
</form>

<script>
  var editor = CodeMirror.fromTextArea(document.getElementById("tests"), {
    lineNumbers: true,
    styleActiveLine: true,
    matchBrackets: true,
    mode: "eco"
  });
</script>

#parse("velocity/template/ecopage_footer.wm")